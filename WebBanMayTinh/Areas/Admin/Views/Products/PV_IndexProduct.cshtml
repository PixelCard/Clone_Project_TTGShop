@model IEnumerable<WebBanMayTinh.Models.Product>


<style>

    .table > :not(caption) > * > * {
        padding: 0.7rem 1.5rem;
        background-color: var(--bs-table-bg);
        border-bottom-width: 1px;
        box-shadow: inset 0 0 0 9999px var(--bs-table-accent-bg);
    }

</style>


<div class="container_fluid">

    <table class="table">
        <tr>
            <th class="col-3">
                @Html.DisplayNameFor(model => model.ProductName)
            </th>



            <th class="col-1">
                @Html.DisplayNameFor(model => model.ProductStatus)
            </th>


            <th class="col-1">
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>


            <th class="col-3" style="text-align: center;">
                @Html.DisplayNameFor(model => model.ProductImage)
            </th>



            <th class="col-2">
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>



            <th class="col-4">
                @Html.DisplayNameFor(model => model.ProductDecriptions)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.ProductStatus)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>


                <td>
                    @*@Html.DisplayFor(modelItem => item.ProductImage)  <img  />*@
                    <img src="@item.ProductImage" alt="@item.ProductName" style="width:300px; height=300px" />
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>



                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }) |
                    @Html.ActionLink("Chi Tiết", "ProductDecriptions/Details", new { id = item.ProductID }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })
                </td>
            </tr>
        }
    </table>
</div>
