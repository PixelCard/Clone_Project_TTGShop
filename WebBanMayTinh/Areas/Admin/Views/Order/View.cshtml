@model WebBanMayTinh.Models.Order
@using PagedList.Mvc


@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<style>

    .table > :not(caption) > * > * {
        padding: 0.7rem 1.5rem;
        background-color: var(--bs-table-bg);
        border-bottom-width: 1px;
        box-shadow: inset 0 0 0 9999px var(--bs-table-accent-bg);
    }
</style>




<section class="content">
    <div class="card-header">
        <h3 class="card-title">Chi tiết đơn hàng</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Tên khách hàng</label>
                    <p class="form-control">@Model.Customer.CustomerName</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Trạng thái</label>
                    <p class="form-control">@Model.PaymentStatus</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Tổng tiền</label>
                    <p class="form-control">@Model.TotalAmount</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Ngày đặt</label>
                    <p class="form-control">@Model.OrderDate</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email</label>
                    <p class="form-control">@Model.Customer.Email_User</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>số điện thoại</label>
                    <p class="form-control">@Model.Customer.CustomerPhone</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h2>Danh sách sản phẩm</h2>
            </div>
            <div class="col-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Tên sản phẩm
                            </th>
                            <th>
                                Giá
                            </th>
                            <th>
                                Sale
                            </th>
                            <th>
                                Số lượng
                            </th>
                            <th>
                                Thành tiền
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>
                                    @item.OrderID
                                </td>
                                <td>
                                    @item.Product.ProductName
                                </td>
                                <td>
                                    @item.UnitPrice
                                </td>
                                <td>
                                    @($"{item.Product.DiscountPercentage*100}")%
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.TotalPrice
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @Html.ActionLink("Back to List", "Index")
</section>
