<div class="Content">
    <div class="container">

        <form method="post" action="@Url.Action("CheckoutPage", "ShoppingCart")" style="display:flex">
            @Html.AntiForgeryToken()
            <!-- Left Panel -->

            <div class="left-panel">
                <div class="main-header">
                    <a href="~/Home/HomePage" class="Logo">
                        <h1 class="Logo_Text">
                            TTGShop - Phụ kiện Game Thủ |Tư vấn Build PC| giá rẻ - www.ttgshop.vn
                        </h1>
                    </a>
                </div>

                <div class="main_content">
                    <div class="Form_Text">
                        <div class="Form_Content">
                            <div class="step">
                                <div class="step_Header">
                                    <h2 class="section-title">Thông tin giao hàng</h2>
                                </div>
                                <div class="step_Info_Account" asp-action="Checkout">

                                    @if (userEmail == null)
                                    {
                                        <p class="step_ConfirmAccount">
                                            Bạn đã có tài khoản?
                                            <a href="@Url.Action("Login","Account")">
                                                Đăng nhập
                                            </a>
                                        </p>
                                    }


                                    else
                                    {

                                        <p class="step_ConfirmAccount">
                                            @userEmail
                                            <a href="@Url.Action("Logout","Account")">
                                                Đăng xuất
                                            </a>
                                        </p>

                                    }

                                    <div>
                                        <div class="form-group">
                                            <label for="name">Họ và tên</label>
                                            <input type="text" id="name" name="Username" value="@Model.Username" placeholder="Họ và tên" class="form-control" required />
                                        </div>


                                        <div class="form-row">
                                            <div class="form-group half-width">
                                                <label for="email">Email</label>
                                                <input type="email" id="email" placeholder="Email" value="@Model.Username" class="form-control" disabled />
                                            </div>
                                            <div class="form-group half-width">
                                                <label for="phone">Số điện thoại</label>
                                                <input type="tel" id="phone" placeholder="Số điện thoại" value="@Model.Phone" class="form-control" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <div class="form-group">
                                        <label for="address">Địa chỉ</label>
                                        <input type="text" id="address" name="ShippingAddress" value="@Model.ShippingAddress" placeholder="Địa chỉ" class="form-control" required />
                                    </div>
                                </div>
                                <div class="form-group" id="newAddressGroup" style="display:none;">
                                    @Html.Label("Địa chỉ mới", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input type="text" id="newShippingAddress" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>




                <div class="Change_PickLocation_Or_Shipping">
                    <div class="Section_Shipping">

                    </div>

                    <div id="Section_Method_Payment" class="section">
                        <div class="step_Header">
                            <h2 class="section-title">Phương thức thanh toán</h2>
                        </div>

                        <div class="step_content">
                            <div class="Content_Box">
                                <div class="radio-wrapper content-box-row">
                                    <input type="radio" id="cod" name="PaymentMethod" value="COD" checked />
                                    <label for="cod">Thanh toán khi giao hàng (COD)</label>
                                    <i class="fa fa-money"></i>
                                </div>

                                <div class="radio-wrapper content-box-row">
                                    <input type="radio" id="bank-transfer" name="PaymentMethod" value="Bank Transfer" />
                                    <label for="bank-transfer">Chuyển khoản qua ngân hàng</label>
                                    <i class='fas fa-money-check'></i>
                                    <p>Số tài khoản: 0000 1782 871<br>Chủ tài khoản: Phan Anh Vũ</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Phương thức giao hàng", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.RadioButtonFor(m => m.ShippingMethod, "Giao hàng nhanh")Giao hàng nhanh<br />
                            @Html.RadioButtonFor(m => m.ShippingMethod, "Giao hàng tiết kiệm")Giao hàng tiết kiệm<br />
                            @Html.ValidationMessageFor(m => m.ShippingMethod)

                        </div>
                    </div>



                    <div class="Form_footer">

                    </div>
                </div>
            </div>


            <!-- Right Panel -->
            <div class="right-panel">
                <div class="order-summary">
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td><img src="@item.ProductImage" class="product-image" /></td>
                            Tên sẩn phẩm:
                            <td>@item.ProductName</td>
                            số lượng:
                            <td>@item.Quantity</td>
                            Giá:
                            <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", item.UnitPrice)</td>
                            Tổng:
                            <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", item.TotalPrice)</td>
                        </tr>
                    }

                </div>




                @*<div class="discount-code">
                        <label for="discount">Mã giảm giá</label>
                        <input type="text" id="discount" placeholder="Nhập mã giảm giá">
                        <button class="apply-button">Sử dụng</button>
                    </div>*@




                <div class="total">
                    <p>Tổng cộng: <span class="total-price">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", Model.TotalAmount)</span></p>
                </div>
                <button class="btn-submit" type="submit">Thanh toán</button>
            </div>
        </form>
    </div>
</div>