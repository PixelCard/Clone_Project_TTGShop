@{
    Layout = "~/Views/Shared/_ProductDetailsLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/CSS/Product_Page.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    body {
        margin: 0;
        background-color: #f8f8f8;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .order-management {
        width: 100%;
        max-width: 75%;
        background-color: #fff;
        padding: 20px;
        margin-top: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .order-management h2 {
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: bold;
        }

    .tabs {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        overflow-x: auto;
    }

    .tab {
        flex: 1;
        padding: 10px;
        font-size: 14px;
        font-weight: bold;
        color: #333;
        background-color: #f5f5f5;
        border: none;
        cursor: pointer;
        white-space: nowrap;
    }

        .tab.active {
            color: #d70018;
            border-bottom: 2px solid #d70018;
        }

    .search-bar {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
        width: 100%;
    }

        .search-bar input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .search-bar button {
            padding: 10px 20px;
            background-color: #f5f5f5;
            border: none;
            cursor: pointer;
        }

    .no-orders {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: #666;
    }

        .no-orders img {
            width: 80px;
            height: 80px;
            margin-bottom: 10px;
        }

        .no-orders p {
            margin-bottom: 20px;
        }

    .continue-btn {
        padding: 10px 20px;
        background-color: #d70018;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    .search-bar button {
        padding: 10px 20px;
        background-color: #f5f5f5;
        border: none;
        cursor: pointer;
        color: #0094ff;
        transition: 0.3s;
    }
        .search-bar button:hover 
        {
            transform: scale(1.05);
        }
    .continue-btn {
        padding: 10px 20px;
        background-color: #d70018;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: transform 0.3s ease; 
    }

        .continue-btn:hover {
            transform: scale(1.05); 
        }
    .tabs {
        display: flex;
        position: relative;
        justify-content: space-around;
    }

    .tab {
        position: relative;
        padding: 10px;
        font-size: 14px;
        font-weight: bold;
        color: #333;
        background-color: #f5f5f5;
        border: none;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .tab:hover {
            color: #d70018; 
        }

 
    .tabs::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        height: 2px;
        width: 0;
        background-color: #d70018;
        transition: width 0.3s ease, left 0.3s ease; 
    }

    .tab:hover ~ .tabs::after {
        width: 100%;
        left: 0;
    }
</style>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý đơn hàng</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/Content/CSS/CustomerLayout.css">
    <link rel="stylesheet" href="~/Content/Icon/themify-icons-font/themify-icons/themify-icons.css">
</head>
<body>
    <div class="container">
        <div class="order-management">
            <div class="tabs">
                <button class="tab active">TẤT CẢ</button>
                <button class="tab">MỚI</button>
                <button class="tab">ĐANG XỬ LÝ</button>
                <button class="tab">ĐANG VẬN CHUYỂN</button>
                <button class="tab">HOÀN THÀNH</button>
                <button class="tab">HỦY</button>
            </div>
            <div class="search-bar">
                <input type="text" placeholder="Tìm đơn hàng theo Mã đơn hàng">
                <button style="">Tìm đơn hàng</button>
            </div>
            <div class="no-orders">
                <img src="~/Content/IMG/erroricon.png">
                <p>Quý khách chưa có đơn hàng nào.</p>
                <button class="continue-btn">TIẾP TỤC MUA HÀNG</button>
            </div>
        </div>
    </div>
</body>
</html>



