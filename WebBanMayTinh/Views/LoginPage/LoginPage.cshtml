@{
    Layout = "~/Views/Shared/_ProductDetailsLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/CSS/Product_Page.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }
    body 
    {
        justify-content: center;
        align-items: center;
        height: 90vh;
        background-color: #f5f5f5;
    }
    .login-container {
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .login-header {
        margin-bottom: 20px;
        font-size: 30px;
        color: #333;
    }

        .login-header .active {
            font-weight: bold;
            color: #000;
        }

        .login-header .inactive {
            color: #c0c0c0;
        }

    .login-form input {
        width: 90%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #f2f2f2;
        color: #777;
        font-size: 18px;
    }

    .captcha-info {
        font-size: 10px;
        color: #777;
        margin-bottom: 15px;
    }

        .captcha-info a {
            color: #888;
            text-decoration: none;
        }

    .login-button {
        width: 90%;
        padding: 10px;
        margin-top: 10px;
        background-color: #ffc107;
        color: #fff;
        font-weight: bold;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .login-button:hover {
            background-color: #e0a800;
        }

    .login-footer {
        font-size: 12px;
        color: #777;
        margin-top: 10px;
    }

        .login-footer a {
            color: #1a73e8;
            text-decoration: none;
            margin-left: 5px;
        }
</style>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý đơn hàng</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/Content/CSS/CustomerLayout.css">
    <link rel="stylesheet" href="~/Content/Icon/themify-icons-font/themify-icons/themify-icons.css">
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <span class="active">Đăng nhập</span> |
            <span class="inactive">Đăng ký</span>
        </div>
        <form class="login-form">
            <input type="email" placeholder="Vui lòng nhập email của bạn" required>
            <input type="password" placeholder="Vui lòng nhập mật khẩu" required>
            <p class="captcha-info">
                This site is protected by reCAPTCHA and the Google
                <a href="#">Privacy Policy</a> and
                <a href="#">Terms of Service</a> apply.
            </p>
            <button type="submit" class="login-button">ĐĂNG NHẬP</button>
        </form>
        <div class="login-footer">
            <p>Bạn chưa có tài khoản? <a href="#">Quên mật khẩu?</a></p>
            <p>Bạn quên mật khẩu? <a href="#">Đăng ký</a></p>
        </div>
    </div>
</body>
</html>
