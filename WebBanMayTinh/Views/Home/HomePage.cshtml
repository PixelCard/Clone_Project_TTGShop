<section class="HomePage_Collection_Items_Discount">
    <div class="container_fluid">
        <div class="Main_Collection">
            <div class="Box_List_Product_Discount">
                <div class="Tittle Box_List_Header_Top">
                    <h2 class="hTittle">
                        <a href="#">
                            ⚡️ KHUYẾN MẠI SHOCK NHẤT 🔥
                        </a>
                    </h2>
                    <div class="btn-slider">
                        <button type="button" role="presentation" class="btn-pre">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" x="0" y="0" viewBox="0 0 24 24"><path d="M15.293 3.293 6.586 12l8.707 8.707 1.414-1.414L9.414 12l7.293-7.293-1.414-1.414z" /></svg>
                        </button>
                        <button type="button" role="presentation" class="btn-next">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" x="0" y="0" viewBox="0 0 24 24"><path d="M7.293 4.707 14.586 12l-7.293 7.293 1.414 1.414L17.414 12 8.707 3.293 7.293 4.707z" /></svg>
                        </button>
                    </div>
                </div>



                <div class=" owl-loaded List_Item Box_List_Header_Middle owl-carousel">
                    <div class="Owl-stage-outer">
                        <div class="Owl-stage" style="width:2412px">
                            @foreach (var product in Model.PaginatedProducts) 
                            { 
                                if (product.DiscountPercentage >= 0.1m)
                                {
                                    <div class="Owl-item" style=" width: 280px">
                                        <div class="Product_Loop">
                                            <div class="Product_Inner">
                                                <div class="ProductLoop_Img">
                                                    <div class="Product_Img">
                                                        <div class="lazy-img first-img">

                                                            <a href="~/ProductDetails/ProductPage/@product.ProductID">

                                                                <img src="@product.ProductImage" />

                                                            </a>

                                                        </div>
                                                    </div>
                                                </div>


                                                <div class="Product_Loop_Details">
                                                    <div class="proloop--top"></div>

                                                    <h3>
                                                        <a href="~/ProductDetails/ProductPage/@product.ProductID" class="quickview-product">
                                                            @product.ProductName
                                                        </a>
                                                    </h3>

                                                    <div class="proloop-variant">
                                                        @*<span>@product.ProductDescription.RAM</span>*@
                                                    </div>

                                                    <div class="Price_ProLoop">
                                                        <div class="Price_Box">
                                                            <span class="Discount_Price">@((int)product.DiscountValue) đ</span>
                                                            <span class="OriginalPrice"><del>@((int)product.ProductPrice) đ</del></span>
                                                        </div>

                                                        <div class="Price_Sell">
                                                            <span class="Pro_Sale">-@((float)product.DiscountPercentage*100)% </span>
                                                        </div>
                                                    </div>

                                                    <div class="Btn_AddOnCart">
                                                        <div class="Inside_Btn_AddOnCart">
                                                            <div class="Box_Cart">
                                                                <a href="@Url.Action("AddToCart", "ShoppingCart", new {id = product.ProductID})" class="btn-proloop-cart add-to-cart  btn-addcart-view">
                                                                    <span class="Tittle">Thêm vào giỏ hàng</span>
                                                                    <span class="Icon">
                                                                        <i class="fas fa-wallet"></i>
                                                                    </span>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>


                <div class="Box_Link Box_List_Header_Middle">
                    <a href="#" class="Button">

                        Xem tất cả ⚡️ KHUYẾN MẠI SHOCK NHẤT 🔥

                        <span class="icon">
                            <i class="fas fa-long-arrow-alt-right"></i>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>




