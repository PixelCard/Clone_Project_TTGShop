@model WebBanMayTinh.Models.ViewModel.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_ProductDetailsLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/CSS/Login.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Icon/themify-icons-font/themify-icons/themify-icons.css">

    <style>
        /* Tổng quan */
        body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f7ff;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        }

        /* Khối chính */
        div {
        text-align: center;
        }

        h1.title {
        font-size: 28px;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 10px;
        }

        p {
        font-size: 16px;
        color: #7f8c8d;
        }

        /* Form đăng nhập */
        .login-form {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        margin-top: 20px;
        }

        .form-group {
        margin-bottom: 20px;
        }

        .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #dfe6e9;
        border-radius: 6px;
        font-size: 14px;
        color: #2c3e50;
        background-color: #f9f9f9;
        outline: none;
        transition: border-color 0.3s ease;
        }

        .form-control:focus {
        border-color: #3498db;
        background-color: #fff;
        }

        .login-button {
        width: 100%;
        padding: 12px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
        }

        .login-button:hover {
        background-color: #2980b9;
        }

        /* Thông báo lỗi */
        .text-danger {
        font-size: 12px;
        color: #e74c3c;
        text-align: left;
        margin-top: 5px;
        }

        /* Gợi ý quên mật khẩu */
        .login-form p {
        margin-top: 10px;
        font-size: 14px;
        color: #95a5a6;
        }

        .login-form p a {
        color: #3498db;
        text-decoration: none;
        transition: color 0.3s ease;
        }

        .login-form p a:hover {
        color: #2980b9;
        }
    </style>
</head>


<body>
    <div class="login-card">
        <div class="login-header">
            <span class="active">Đăng nhập</span> |
            <span class="inactive"><a href="/Account/Register" class="Link_inactive">Đăng ký</a></span>
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Vui lòng nhập email của bạn" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Vui lòng nhập mật khẩu của bạn" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group action"> 
                <button type="submit" name="submit" value="Login" class="login-button">ĐĂNG NHẬP</button>
            </div>
            @*<p class="captcha-info">
                This site is protected by reCAPTCHA and the Google
                <a href="#">Privacy Policy</a> and
                <a href="#">Terms of Service</a> apply.
            </p>*@
        }
        <div class="login-footer">
            <p>Bạn chưa có tài khoản? <a href="#">Quên mật khẩu?</a></p>
            <p>Bạn quên mật khẩu? <a href="/Account/Register">Đăng ký</a></p>
        </div>
    </div>
</body>
</html>
