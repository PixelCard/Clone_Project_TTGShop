@model WebBanMayTinh.Models.ViewModel.RegisterVM

@{
    ViewBag.Title = "AccountInfo";
    Layout = "~/Views/Shared/_ProductDetailsLayout.cshtml";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/CSS/CustomerLayout.css" />


<style>

    *{
        padding:0;
        margin:0;
        box-sizing:border-box;
    }


    ul, li {
        padding: 0;
        margin: 0;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f9;
        margin-top: 20px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .sidebar {
        background-color: #ffffff;
        border-radius: 5px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

        .sidebar .list-group-item {
            border: none;
            padding: 15px 25px;
            font-size: 16px;
            background-color: #f9f9f9;
        }

            .sidebar .list-group-item a {
                text-decoration: none;
                color: #333;
            }

            .sidebar .list-group-item:hover {
                background-color: #f1f1f1;
            }

    .content {
        background-color: #ffffff;
        border-radius: 5px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

        .content h2 {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }

        .content p {
            font-size: 16px;
            color: #555;
            margin-bottom: 15px;
        }

        .content .no-orders {
            font-size: 18px;
            color: #777;
            text-align: center;
            margin-top: 30px;
        }

    .no-orders p {
        background-color: #d9e9f5;
        padding: 15px;
        border-radius: 5px;
        font-weight: bold;
    }

    .header {
        background-color: #ffc107;
        padding: 15px 0;
        color: #fff;
        text-align: center;
        font-size: 32px;
        font-weight: bold;
    }
</style>



<div class="container">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="sidebar">
                <ul class="list-group">
                    <li class="list-group-item"><a href="@Url.Action("AccountInfo","Account",null)">Thông tin tài khoản</a></li>
                    <li class="list-group-item"><a href="#">Danh sách địa chỉ</a></li>
                    <li class="list-group-item"><a href="@Url.Action("ProductHistory","ProductHistory",null)">Lịch sử đơn hàng</a></li>
                    <li class="list-group-item"><a href="@Url.Action("LogOut","Account",null)">Đăng xuất</a></li>
                </ul>
            </div>
        </div>

        <!-- Content -->
        <div class="col-md-9">
            <div class="content">
                <h2>Thông Tin Tài Khoản</h2>
                <p><strong>Họ và Tên:</strong> @Model.CustomerName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Số Điện Thoại:</strong> @Model.CustomerPhone</p>
                <p><strong>Địa Chỉ:</strong> @Model.CustomerAddress</p>
                <p><a href="@Url.Action("ProductHistory","ProductHistory",null)">Lịch sử đơn hàng</a></p>
                <hr>
                <div class="no-orders">
                    <p>Bạn chưa đặt mua sản phẩm.</p>
                </div>
            </div>
        </div>
    </div>
</div>
